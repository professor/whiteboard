<div class='team_member_photo'>
    <div class="label">
        <%= fields_for :grade do |grade| %>
            <%= grade.text_field :_for_student ,:name=>member.id,:value => ((grade_obj.nil?)?"":grade_obj.score),:size=> "3", :tabindex=>member.id%>
            /
            <span class="maximum-score">
                <%= display_maximum_score %>
            </span>
        <% end %>
    </div>
    <div style="text-align: center; margin-top: 10px;">
        <a href='http://<%=@hostname_with_port%>/people/<%= member.twiki_name %>' target='_top'>
            <%= image_tag(member.image_uri, :border => 0, :alt => member.human_name+" image", :height => 150, :width => 113, :class => 'deliverable-photo') %></a>
    </div>
    <div class='team-member-name'> <%= member.human_name %></div>
</div>
