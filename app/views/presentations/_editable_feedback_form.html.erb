
<%= form_for @feedback, :html => { :multipart => true } do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this deliverable from being saved:</h2>

      <ul>
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field(:presentation_id) %>

  <% @questions.each do |question| %>
      <p>
        <%= question.text %>
        <div>
        <% @eval_options.each do |key, value| %>
          <div>
            <%= radio_button_tag "evaluation[#{question.id.to_s}][rating]", key %><span><%= value %></span>
          </div>
        <% end %>
        </div>
        <br/>
        <div>
          <span>Comments:</span><br/><%= text_area_tag "evaluation[#{question.id.to_s}][comment]", nil, :size => "95x5" %>
        </div>
        <br/>
      </p>
  <% end %>
  <p>
    <%= f.submit button_name %>
  </p>
<% end %>
