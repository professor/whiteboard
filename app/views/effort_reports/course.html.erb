<% content_for :title, 'Effort Report for ' + @course.name %>
<% content_for :javascript do %>
    <%= javascript_tag do %>
        $(function() {
        $("#panel_state_date").datepicker({
        showButtonPanel: true,
        dateFormat: 'yy-mm-dd'
        });
        });
    <% end %>
<% end %>

<div>
  <table class="layout_table">
    <tr>
      <td><%= link_to "Back to Effort Reports for this course", effort_report_path(params[:course_id]) %></td>
    </tr>
    <tr>
      <td>
        <a href="<%= url_for :action => "index", :id => params[:id], :week => nil, :only_path => true %>">Back to Effort
          Reports main page</a></td>
    </tr>
  </table>
</div>

<div>
  <%= form_for @panel_state, :as => :panel_state, :url => {:action => "course", :id => params[:id]} do |f| %>
      <table class="layout_table">
        <tr>
          <td>
            Date
            <%= f.text_field :date, :size => 10 %>
          </td>

          <td>
            <%= f.submit "Update" %>
          </td>
        </tr>
        <tr>
          <td>
            Year
            <%= f.text_field :year, :size => 4 %>
            Week
            <%= f.text_field :week_number, :size => 2 %>
          </td>
          <td>
            Course
            <%= f.text_field :course_id, :size => 2 %>
          </td>
          <td>
            <%= f.submit "Update" %>
          </td>
        </tr>
      </table>
  <% end %>
