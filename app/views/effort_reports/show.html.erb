<% content_for :title, 'Effort Reports' %>
<h1>Effort Reports</h1>


<%if current_user.is_staff || current_user.is_admin %>
<h2>Campus View</h2>
  <a href="<%=url_for :action=>"index", :id => params[:id], :week => nil, :only_path=>true%>">Back to Effort Reports main page</a>
