<% if current_user && current_user.is_admin? %>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
<% else %>
    <td>&nbsp;</td>
<% end %>
-->
      </tr>
  <% end %>
  </tbody>
</table>

<br/>

<% if current_user && (current_user.is_admin? || current_user.is_staff?) %>
    <%= link_to 'New person', new_person_path %>
<% end %>
