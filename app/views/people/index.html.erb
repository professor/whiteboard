<table id="people_table" class="tablesorter" hidden="true" >
  <thead>
  <tr>
    <th>Pic</th>

    <th>First name</th>
    <th>Last name</th>
    <th>Contact Details</th>
    <th>Program</th>
  </tr>
  </thead>
  <tbody>
  <% for person in @people  %>
      <tr class="tablesorter
        <% if person.is_student %>student
        <% end %>
        <% if person.is_staff %>staff

        <% end %>" >
        <td class="image_cell photobook-img">

        </td>
        <td><%= link_to person.first_name, "/people/show/#{person.twiki_name}"  %></td>
        <td><%= link_to person.last_name, "/people/show/#{person.twiki_name}" %></td>
        <td>
          <% person.telephones_hash.each do |key, value| %>

              <%= "#{key}: #{value}" %> <br />

          <% end %>
          Email: <%=mail_to person.email %>
        </td>
        <td>
          <% if person.is_student %>
              <%= person.masters_program unless person.masters_program.blank? %>
              <%= person.masters_track unless person.masters_track.blank? %>
              <% if person.is_part_time %>
                  (PT)
              <% else %>
                  (FT)
              <% end %>
          <% elsif person.is_staff %>
              Staff
          <% end %>
        </td>
        <td hidden="true" class="url_cell">  <%= person.image_uri %></td>

      </tr>
  <% end %>


  </tbody>
</table>

