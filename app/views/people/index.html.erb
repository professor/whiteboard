<% content_for :title, 'People - Search' %>

<% content_for :people_search do %>
    <%= stylesheet_link_tag 'people_search', :media => "screen", :rel => "stylesheet" %>
    <%= stylesheet_link_tag 'people_search_pad', :media => "only screen and (min-width: 641px) and (max-width: 800px)", :rel => "stylesheet" %>
    <%= stylesheet_link_tag 'people_search_phone', :media => "only screen and (max-width: 640px)", :rel => "stylesheet" %>
    <%= stylesheet_link_tag 'people_search_phone', :media => "handheld, only screen and (max-device-width: 640px)", :rel => "stylesheet" %>
    <%= javascript_include_tag 'people_search' %>
<% end %>


<h1>People Search</h1>

<!-- UI Mockup HTML Migration -->

<!-- Dialog Box for Customization -->
<div id="dialog_modal" title="Customization">
  <div id='customization_dialog_close' >[x]</div><br><br>
  <div id="modal_card" class="data_card">
    <h2>Customize Search Results</h2>
    <img src="images/mascot.jpg"><br>
    <input checked type="checkbox" id= "photo_checkbox" name="Photo" value="cu_photo" /> Display Photo? <br>
    <input checked type="checkbox" id="email_checkbox" name="Email" value="cu_email" /> Email: ? <br>
    <input checked type="checkbox" id="phone_home_checkbox"  name="PhoneH" value="cu_phone1" /> Phone1: ? <br>
    <input checked type="checkbox" id="phone_mobile_checkbox"  name="PhoneM" value="cu_phone2" /> Phone2: ? <br>
    <input type="checkbox" id="team_checkbox"  name="Team" value="cu_team" /> Team: ? <br>
    <input type="checkbox" id="company_checkbox"  name="Company" value="cu_company" /> Company: ? <br>
  </div>
</div>
<div id="export_dialog_modal" title="Export Results">
  <div id='export_dialog_close'>[x]</div><br><br>
  Please Choose Format:
  <button id="export_to_csv"> CSV </button>
  <button id="export_to_vcf"> VCARD </button>  
</div>


<!-- Smart Search Area-->
<div id="smart_search_area">
  <input disabled type="text" placeholder="Enter Search Text" id="smart_search_text" style="background-color: #f3f0e9;"/>
  <button id="advanced_search_btn" title="Click to switch between smart/advanced search">Advanced</button>
  <button id="card_mode_btn" title="Click to switch to Photo Card View" class="hidden"><img src="images/card.png"></button>
  <button id="list_mode_btn" title="Click to switch to List View"><img src="images/list.png"></button>
</div>


<!-- Advanced Search Area-->
<div id="advanced_search_area">
  <div id='advanced_area_close' class="hidden">x</div>
  <div>
    <div id="main_criteria_box" style="display: inline-block;">
      <input type="text" placeholder="Search in ..." id="search_text_box" style="background-color: #f3f0e9;"/>
      <select id="main_criteria_picker" title="Search in one or all Name/ID fields" class="criterias" >
        <option value="all">Full Name & Andrew ID</option>
        <option value="first_name">Only First Name</option>
        <option value="last_name">Only Last Name</option>
        <option value="andrew_id">Only Andrew ID</option>
      </select>
    </div>

    <select id="people_type_picker" title="Choose one or all people categories">
      <option value="all">All People</option>
      <option value="student"> Student </option>
      <option value="staff"> Staff/Faculty </option>
      <option value="alumnus"> Alumni </option>
    </select>

    <select id="extra_criteria_picker" title="Add extra criteria">
      <option value="default" class="select-hint">Add Criteria</option>
      <option value="company">Company</option>
      <option value="class_year">Class Year</option>
      <option value="program">Program</option>
      <option value="ft_pt">Full/Part Time</option>
    </select>
  </div>


  <div id="extra_criteria_box">
    <ul class="criteria_tags">
      <li class="criteria_tag" id="criteria_company" title="Company" style="background-color: LightCoral;">
        Company: <input type="text" id="criteria_company_text" class="criteria_text" style="background-color: LightCoral;"/><a href="#">x</a> </li>
      <li class="criteria_tag" id="criteria_class_year" title="Class Year" style="background-color: Moccasin;">
        Class Year:
        <select class="criteria_text" style="background-color: Moccasin; width:56px;">
        </select>
        <a href="#">x</a>
      </li>
      <li class="criteria_tag" id="criteria_program" title="Program" style="background-color: Beige;">
        Program:
        <select class="criteria_text" style="background-color: Beige; width: 80px;">
          <option value="SE">SE</option>
          <option value="SE_TECH">SE-Tech</option>
          <option value="SE_DM">SE-DM</option>
          <option value="SM">SM</option>
          <option value="ECE">ECE</option>
          <option value="INI">INI</option>
          <option value="INI_IS">INI-IS</option>
          <option value="INI_SM">INI-SM</option>
          <option value="INI_MOB">INI_MOB</option>
        </select>
        <a href="#">x</a>
      </li>
      <li class="criteria_tag" id="criteria_ft_pt" title="Full/Part Time" style="background-color: LightBlue;">
        <select class="criteria_text" style="background-color: LightBlue; width: 86px;">
          <option value="ft">Full Time</option>
          <option value="pt">Part Time</option>
        </select>
        <a href="#">x</a>
      </li>
    </ul>
  </div>

  <input type="checkbox" id="exact_match_checkbox" name="exact_match" value="exact_match" /> Exact Match?
  <input type="checkbox" id="include_inactive_checkbox" name="include_inactive" value="include_inactive" /> Include Inactive Users?

</div>



<br>
<a id="customization_link">Customize</a><br>
<a id="export_link">Export Results</a> 
<br>
<div id="results_box"></div><br>
<div style="clear: both;"></div>
<!-- End of HTML Migration -->


<% if can? :create, User %>
    <%= link_to 'New person', new_person_path %>
<% end %>
